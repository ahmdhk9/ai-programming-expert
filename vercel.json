{
  "version": 2,
  "public": true,
  "env": {
    "NODE_ENV": "production"
  },
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/(.*\\.(?:js|css|json|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot))",
      "dest": "public/$1"
    },
    {
      "src": "/.*",
      "dest": "public/index.html"
    }
  ]
}
