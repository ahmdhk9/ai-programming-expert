{
  "version": 2,
  "buildCommand": "echo 'Build complete'",
  "outputDirectory": "public",
  "framework": "static",
  "functions": {
    "backend/server.js": {
      "maxDuration": 60,
      "memory": 512
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "backend/server.js"
    },
    {
      "source": "/socket.io/(.*)",
      "destination": "backend/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
