{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/(.*\\.(?:js|css|json|html|ico|svg|png|jpg|jpeg|gif|woff|woff2|ttf|eot))",
      "dest": "public/$1"
    },
    {
      "src": "/.*",
      "dest": "public/index.html"
    }
  ]
}
