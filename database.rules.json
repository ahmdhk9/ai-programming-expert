{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth.uid === $uid || root.child('users').child($uid).child('public').val() === true",
        ".write": "auth.uid === $uid",
        "username": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "avatar": {
          ".validate": "newData.isString()"
        },
        "status": {
          ".validate": "newData.isString()"
        }
      }
    },
    "sessions": {
      "$sessionId": {
        ".read": "auth.uid !== null",
        ".write": "auth.uid !== null",
        "users": {
          ".validate": "newData.isString()"
        },
        "messages": {
          "$messageId": {
            ".validate": "newData.hasChildren(['text', 'timestamp', 'userId', 'username'])"
          }
        }
      }
    },
    "messages": {
      "$messageId": {
        ".read": "auth.uid !== null",
        ".write": "auth.uid === newData.child('userId').val()",
        "text": {
          ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 1000"
        },
        "timestamp": {
          ".validate": "newData.isNumber()"
        },
        "userId": {
          ".validate": "newData.isString()"
        }
      }
    },
    ".read": "auth.uid !== null",
    ".write": "auth.uid !== null"
  }
}
