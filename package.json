{
  "name": "ai-programming-expert",
  "version": "5.0.0",
  "description": "Advanced AI Programming Expert Platform - Real-time Social Chat + AI",
  "private": true,
  "scripts": {
    "dev": "npm run backend & npm run frontend",
    "start": "npm run backend",
    "build": "mkdir -p public && echo 'Static files ready'",
    "deploy:vercel": "vercel deploy --prod",
    "deploy:fly": "flyctl deploy",
    "deploy:all": "npm run deploy:vercel && npm run deploy:fly",
    "backend": "cd backend && npm start",
    "frontend": "cd public && npx http-server -p 5000 -c-1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "ai",
    "chat",
    "social",
    "realtime",
    "socket.io"
  ],
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "groq-sdk": "^0.36.0",
    "openai": "^6.9.1",
    "socket.io": "^4.8.1"
  }
}